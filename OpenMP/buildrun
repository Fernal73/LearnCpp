#!/usr/bin/env bash
#display usage
[ $# -eq 0 ] && {
  echo "Usage: $0 <File Name without extension> options";
  exit 1;
}
`rm -f $1.exe`
`g++ -g -O3 -fopenmp -std=gnu++20 $1.cpp -o $1.exe $2` 
#`g++ -std=gnu++20 -fopenmp $1.cpp -o $1.exe $2` 
[ -e $1.exe ] && {
  termux-elf-cleaner $1.exe &> /dev/null;
  exec ./$1.exe;
  exit 0;
}
